@{
    ViewData["Title"] = "Добавить нового футболиста";
}

@model Footballer

<body>
    <h1>@ViewData["Title"]</h1>

    <form asp-controller="Home" asp-action="AddFootballer" id="footballerForm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FirstName">Имя</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName">Фамилия</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Gender">Пол</label>
            <select asp-for="Gender" class="form-control">
                <option value="Мужской">Мужской</option>
                <option value="Женский">Женский</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="BirthDate">Дата рождения</label>
            <input asp-for="BirthDate" type="date" class="form-control" />
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Team.Name">Команда</label>
            <input autocomplete="off" asp-for="Team.Name" id="TeamName" list="teams" class="form-control" />
            <datalist id="teams">
                @foreach (var team in ViewData["Teams"] as List<Team> ?? new List<Team>())
                {
                    <option value="@team.Name">@team.Id</option>
                }
            </datalist>
            <button id="addNewTeam" style="display: none;" class="btn btn-link">Добавить новую команду</button>
            <span asp-validation-for="Team.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Country">Страна</label>
            <select asp-for="Country" class="form-control">
                <option value="Россия">Россия</option>
                <option value="США">США</option>
                <option value="Италия">Италия</option>
            </select>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Добавить</button>
    </form>

    <script defer src="~/js/AddFootballer.js"></script>
</body>